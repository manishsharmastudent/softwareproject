<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="model.Klant" table="KLANTEN">
      <meta attribute="class-description">
         This class contains the Klant detail.
      </meta>
      <id name="rijksregisterNummer" type="string" column="rijksregisterNummer"/>
      <property name="achternaam" column="achternaam" type="string"/>
      <property name="active" column="active" type="boolean"/>
      <property name="adres" column="adres" type="string"/>
      <property name="postcode" column="postcode" type="int"/>
	  <property name="stad" column="stad" type="string"/>
	  <property name="voornaam" column="voornaam" type="string"/>
   </class>
</hibernate-mapping>